<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>    
  
  <%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
  <%= stylesheet_link_tag 'blueprint/print',  :media => 'print' %>
  <!--[if lt IE 8]><%= stylesheet_link_tag 'blueprint/ie' %><![endif]-->
  <%= stylesheet_link_tag 'custom', :media => 'screen' %>

  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
    <div class="container">
      <header>
       <%= image_tag("hedemi.png", :alt => "Herrscher des Mittelalters", :class => "round") %>
        <nav class="round">
          <ul>
            <li><%= link_to "Home", '#' %></li>
            <li><%= link_to "Anmelden", '#' %></li>
            <li><%= link_to "Vision", vision_path %></li>
            <li><%= link_to "Mitwirken", mitwirken_path %></li>
          </ul>
        </nav>
      </header>
      <section class="round">
      
      <div id="content" class="round">
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, :class => "flash #{key}") %>
        <% end %> 
        <%= yield %>
      </div>

      </section>

<footer>
  <nav class="round">
    <ul>
      <li><%= link_to "Kontakt", kontakt_path %></li>
      <li><%= link_to "Impressum", impressum_path %></li>
      <li><%= link_to "AGB", agb_path %></li>
      <li><%= link_to "Haftungsausschluss", haftungsausschluss_path %></li>
    </ul>
  </nav>
</footer>
<%= debug(params) if Rails.env.development? %>
    </div>
</body>
</html>
